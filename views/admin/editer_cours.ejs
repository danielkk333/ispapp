                </div>
              </div> -->
              <div class="seperator"></div>

              <div class="col-12 m-t20">
                <div class="ml-auto m-b5">
                  <h3>2. Description</h3>
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Description du cours</label>
                <div>
                  <br>
                  <textarea class="form-control" name="description" cols="10" rows="8"> <%- cours.description %></textarea>
                </br>
                </div>
              </div>
