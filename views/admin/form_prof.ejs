<%- include("./partials/adminHeader") %>

<div class="container-fluid">
  <div class="row">
    <!-- Your Profile Views Chart -->
    <div class="col-lg-12 m-b30">
      <div class="widget-box">
        <div class="wc-title">
          <h4>Ajouter un Professeur</h4>
        </div>
        <%- include("../alertMessage") %>
        <div class="widget-inner">
          <form
            class="edit-profile m-b30"
            method="post"
            action="/admin/save_prof"
          >
            <div class="row">
              <div class="col-12">
                <div class="ml-auto"></div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Nom</label>
                <div>
                  <input
                    class="form-control"
                    name="nom"
                    type="text"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Postnom</label>
                <div>
                  <input
                    class="form-control"
                    name="postnom"
                    type="text"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Prenom</label>
                <div>
                  <input
                    class="form-control"
                    name="prenom"
                    type="text"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Nom d'utilisateur</label>
                <div>
                  <input
                    class="form-control"
                    name="username"
                    type="text"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Adresse email</label>
                <div>
                  <input
                    class="form-control"
                    name="mail"
                    type="email"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label"
                  >Enseigne dans quel section ?</label
                >
                <div>
                  <input
                    class="form-control"
                    name="section"
                    type="text"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label"
                  >Enseigne dans quel departement ?</label
                >
                <div>
                  <input
                    class="form-control"
                    name="departement"
                    type="text"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label"
                  >Enseigne dans quel promotion ?</label
                >
                <div>
                  <input
                    class="form-control"
                    type="text"
                    value=""
                    name="promotion"
                    required
                    autocomplete="off"
                  />
                </div>
              </div>
              <div class="seperator"></div>

              <div class="form-group col-6">
                <label class="col-form-label">Mot de passe</label>
                <div>
                  <input
                    class="form-control"
                    type="password"
                    name="password"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Confirmer Mot de passe</label>
                <div>
                  <input
                    class="form-control"
                    type="password"
                    name="confirmer"
                    value=""
                    required
                  />
                </div>
              </div>

              <div class="col-12">
                <button type="submit" class="btn">Enregistrer</button>

                <a
                  href="/admin/prof"
                  type="button"
                  class="btn-secondry add-item m-r5"
                >
                  <i class="fa fa-fw fa-arrow-left"></i>Retour
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- Your Profile Views Chart END-->
  </div>
</div>

<%- include("./partials/adminFooter") %>
