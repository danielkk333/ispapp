<%- include("./partials/adminHeader") %>
<div class="container-fluid">
  <div class="row">
    <!-- Your Profile Views Chart -->
    <div class="col-lg-12 m-b30">
      <div class="widget-box">
        <div class="wc-title">
          <h4>Cr√©er un horaire</h4>
        </div>
        <div class="widget-inner">
          <form
            class="edit-profile m-b30"
            method="post"
            action="/admin/save_horaire"
          >
            <div class="row">
              <div class="col-12">
                <div class="ml-auto"></div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Nom du cours</label>
                <div>
                  <input
                    class="form-control"
                    name="nom_cours"
                    type="text"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Departement</label>
                <div>
                  <input
                    class="form-control"
                    name="departement"
                    type="text"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Promotion</label>
                <div>
                  <input
                    class="form-control"
                    name="promotion"
                    type="text"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="form-group col-6">
                <label class="col-form-label">Date</label>
                <div>
                  <input
                    class="form-control"
                    name="date"
                    type="Date"
                    value=""
                    required
                  />
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <div class="select">
                    <label class="label-select">Horaire pour ?</label>
                    <select name="horaire_role" id="">
                      <option value="" disabled selected>
                        Choisir un horaire soit pour etudiant soit pour Prof
                      </option>
                      <option value="etudiant">Etudiant</option>
                      <option value="prof">Prof</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="col-12">
                <button type="submit" class="btn">Enregistrer</button>

                <a
                  href="/admin/horaire"
                  type="button"
                  class="btn-secondry add-item m-r5"
                >
                  <i class="fa fa-fw fa-arrow-left"></i>Retour
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- Your Profile Views Chart END-->
  </div>
</div>

<%- include("./partials/adminFooter") %>
